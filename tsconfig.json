{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "app/*": ["app/*"],
      "infra/*": ["infra/*"],
      "domain/*": ["domain/*"],
      "presentation/*": ["presentation/*"],
      "main/*": ["main/*"],
      "environment": ["environment"],

    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}